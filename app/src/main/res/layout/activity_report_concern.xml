<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white"
    tools:context="com.allin.activity.ReportConcernActivity">

    <com.allin.view.AToolbar
        android:id="@+id/atoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:at_style="1"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="40dp"
                android:background="@color/light_gray"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rectangle_gray_border_solid_white"
                android:gravity="start"
                android:hint="@string/type_your_message_here"
                android:minLines="3"
                android:padding="5dp"
                android:textColorHint="@color/light_gray_2"
                android:textCursorDrawable="@drawable/color_cursor"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="40dp"
                android:background="@color/light_gray"/>

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/blue"
                android:text="@string/send"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/light_gray"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
